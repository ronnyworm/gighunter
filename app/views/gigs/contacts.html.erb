<h1>Kontakte</h1>



<%= form_tag "/contacts" do %>
<div class="table-responsive">
<table class="table table-striped">
<thead>
  <tr>
    <th>Name</th>
    <th>E-Mail</th>
    <th>Telefon</th>
    <th>Info</th>
    <th></th>
  </tr>
</thead>

<tbody>
  <% @contacts.each do |contact| %>
    <tr>
      <td><%= contact.name %></td>
      <td><%= contact.email %></td>
      <td><%= contact.telephone %></td>
      <td><%= contact.info %></td>
      <td></td>
    </tr>
  <% end %>

  <tr>
    <td><%= text_field_tag :name, nil, class: "form-control", placeholder: "Name" %></td>
