<!DOCTYPE html>
<html>
<head>
  <title>GigHunter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "/", class: "navbar-brand page-scroll" do %>
        GigHunter
      <% end %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Gigs', gigs_path %></li>
        <li><%= link_to 'Band', "/band/#{current_user.band.id}" if current_user %></li>
      </ul>
    </div>
  </div>

  <div style="float:right">
    <% if user_signed_in? %>
      <%= I18n.t 'devise.info.logged_in_as' %> <strong><%= current_user.email %></strong>.
      <%= link_to I18n.t('devise.info.edit_profile'), edit_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to I18n.t('devise.info.logout'), destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
    <% else %>
      <%= link_to I18n.t('devise.info.sign_up'), new_user_registration_path, :class => 'navbar-link'  %> |
      <%= link_to I18n.t('devise.info.login'), new_user_session_path, :class => 'navbar-link'  %>
    <% end %>
  </div>
</nav>

<div class="container">

<% if notice %>
	<p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
	<p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

</div>

</body>
</html>
