<h2><%= I18n.t("devise.info.sign_up") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, I18n.t("devise.info.user.email") %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, I18n.t("devise.info.user.password") %>
    <% if @minimum_password_length %>
    <em><%= I18n.t("devise.info.user.password_characters_min", count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, I18n.t("devise.info.user.password_confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit I18n.t("devise.info.sign_up"), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
